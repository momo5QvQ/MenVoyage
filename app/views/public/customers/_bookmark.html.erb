<div class="row">
  <div class="col-md-12">
    <a data-toggle="collapse" href="#collapse1">
      <h5><%= @customer.last_name %>様のお気に入り</h5>
    </a>
  </div>
</div>

<div class="m-5">
  <div id="collapse1" class="panel-collapse collapse">
    <div class="panel-body">

      <% if @bookmarks.length != 0 %>
        <% @bookmarks.each do |recipe| %>
          <div class="d-flex justify-content-between border-bottom border-dark">
            <div class="py-1"><%= image_tag recipe.get_image, size: "200x150", style: "object-fit: cover;" %></div>
            <div class="py-5"><%= recipe.customer.last_name + recipe.customer.first_name %></div>
            <div class="py-5"><%= recipe.name %></div>
            <div class="py-5"><%= link_to "詳細を確認", recipe_path(recipe.id), class: "btn btn-warning btn_lg" %></div>
          </div>
        <% end %>
      <% else %>
          <div class="text-center">
            お気に入りはまだ登録されていません。
          </div>
      <% end %>

    </div>
  </div>
</div>
<div class="container-fluid">

  <div class="row">
    <div class="col-sm-12 mb-5">
      <h2><%= @recipe.name %></h2>
    </div>
  </div>

  <div class="row">

    <div class="col-sm-4 mb-5">
      <%= image_tag @recipe.get_image, size: "300x200", style: "object-fit: cover;" %>
    </div>
    <div class="col-sm-8 mb-5">
      <div class="row">
        <div class="col-sm-12 mb-2">
          <strong>材料</strong>
        </div>
        <div class="col-sm-12 mb-5">
          <%= @recipe.material %>
        </div>
      </div>

      <div class="row">
        <div class="col-sm-12 mb-2">
          <strong>作り方</strong>
        </div>
        <div class="col-sm-12 mb-5">
          <%= @recipe.making %>
        </div>
      </div>

      <div class="row">
        <div class="col-sm-12 mb-2">
          <strong>コメント</strong>
        </div>
        <div class="col-sm-12 mb-5">
          <%= @recipe.message %>
        </div>
      </div>

      <div class="row">
        <div class="col-sm-12 mb-2">
          <strong>カテゴリー</strong>
        </div>
        <div class="col-sm-12 mb-5">
          <!-- タグ -->
          <% @recipe_tags.each do |tag| %>
            <%#= link_to tag.name,search_tag_path(tag_id: tag.id) %>
            <span class="tag"><%= tag.name %></span>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-6 mb-5">
      <%= render "bookmark", recipe: @recipe %>
    </div>
    <div class="col-sm-6 mb-5">
      <% if @recipe.customer == current_customer %>
        <td><%= link_to 'レシピの編集', edit_recipe_path(@recipe), class: "btn btn-sm btn-success" %></td>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div>
      <p>コメント件数：<%= @recipe.comments.count %></p>
      <% @recipe.comments.each do |comment| %>
        <%= comment.customer.name %>
        <%= comment.created_at.strftime('%Y/%m/%d') %><%= post_comment.comment %>
      <% end %>
    </div>
    <div>
      <%= form_with model: [@recipe, @comment] do |f| %>
        <%= f.text_area :comment, rows: '5', placeholder: "コメントをここに" %>
        <%= f.submit "送信する" %>
      <% end %>
    </div>
  </div>

</div>